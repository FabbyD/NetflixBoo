{
	"manifest_version" : 2,

	"name" : "Netflix Boo",
	"description" : "Netflix extension to synchronize your netflix and chill sessions across the ocean",
	"author" : "Fabrice Dugas",
	"version" : "1.0",
  
	"icons" : {
		"16" : "images/pacman16.png",
    "64" : "images/pacman64.png",
    "128" : "images/pacman128.png"
	},

	"page_action" : {
		"default_icon" : "images/pacman16.png",
    "default_popup": "html/credentials.html"
	},

	"background" : {
		"page" : "html/background.html"
	},

	"permissions" : [
    "identity",
		"tabs",
		"activeTab",
		"declarativeContent",
		"https://ajax.googleapis.com/",
		"https://www.gstatic.com/"
	],
  
  "content_security_policy" : "script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com; object-src 'self'",
  
  "oauth2": {
    "client_id": "561430015544-cjhpgkogcsqnenb6a48k8l6d56bqp23k.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "key": ""
}

